<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:gravity="center"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.example.yuuya.ainudesignapp.MakeActivity"
    >

    <FrameLayout
        android:id="@+id/workFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        >




    </FrameLayout>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:background="@color/yellow"

        >


        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="addMoreu"
                android:id="@+id/addMoreu"
                android:src="@drawable/moreu"
                android:scaleType="fitXY"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="addMoreu2"
                android:id="@+id/addMoreu2"
                android:src="@drawable/moreu2"
                android:scaleType="fitXY"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="addShiku"
                android:id="@+id/addShiku"
                android:src="@drawable/shiku"
                android:scaleType="fitXY"
                />

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="addAiushi"
                android:id="@+id/addAiushi"
                android:src="@drawable/aiushi"
                android:scaleType="fitXY"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="bgcolor"
                android:id="@+id/bgcolor"
                android:text="背景色"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="setSeek"
                android:id="@+id/setSeek"
                android:text="デザイン色"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClick="subDesign"
                android:id="@+id/subDesign"
                android:text="１つ戻す"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/goSave"
                android:id="@+id/save"
                />

        </LinearLayout>


    </HorizontalScrollView>

</LinearLayout>
